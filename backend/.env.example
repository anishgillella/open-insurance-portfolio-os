# Application
APP_NAME=Open Insurance
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# API
API_V1_PREFIX=/v1

# Database (Supabase PostgreSQL)
# For Supabase: postgresql+asyncpg://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/open_insurance

# Database Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=open-insurance-docs

# Pinecone
PINECONE_API_KEY=
PINECONE_INDEX_NAME=insurance-docs
PINECONE_ENVIRONMENT=

# AI Services
MISTRAL_API_KEY=
GEMINI_API_KEY=
OPENAI_API_KEY=

# Security
SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS
CORS_ORIGINS=["http://localhost:3000"]
